{
  "private": true,
  "name": "froute",
  "version": "0.0.0",
  "main": "index.js",
  "author": "Hanakla <hanakla.dev@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "watch:build": "wsrun -p @fleur/froute -c watch",
    "watch:example": "wsrun -p examples -c watch",
    "build": "wsrun -m -c build",
    "test": "wsrun -m --no-prefix -c test",
    "sync:readme": "cp ./README.md ./packages/froute/ && :",
    "example:start": "wsrun -p examples -c start"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "wsrun": "^5.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "README.md": [
      "yarn sync:readme",
      "git add ./packages/froute/README.md"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
